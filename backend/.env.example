# =============================================================================
# HCS-U7 SIEGE WALL - Backend Environment Variables Template
# =============================================================================
# Copy this file to .env and fill with your values
# ⚠️ NEVER commit .env files with real secrets to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=HCS-U7 Siege Wall
DEBUG=false                    # ⚠️ NEVER enable in production

# -----------------------------------------------------------------------------
# HCS-U7 API Configuration
# -----------------------------------------------------------------------------
HCS_API_URL=https://hcs-u7-backend.onrender.com
HCS_API_KEY=your_secret_key_here    # ⚠️ Get from Render dashboard

# -----------------------------------------------------------------------------
# CORS - Allowed Origins (comma-separated)
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Database (optional - for persistent storage)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/siege

# -----------------------------------------------------------------------------
# Siege Engine Settings
# -----------------------------------------------------------------------------
ATTACK_RATE_PER_SECOND=10      # Attacks per second (default: 10)
MOCK_MODE=true                 # Use mock HCS client for demo (default: true)

# -----------------------------------------------------------------------------
# WebSocket Settings
# -----------------------------------------------------------------------------
WS_HEARTBEAT_INTERVAL=30       # Heartbeat interval in seconds

# -----------------------------------------------------------------------------
# AI APIs (optional - for real AI attackers)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
